        "architecture": {
            "64bit": {
                "url": "http://www.sysgauge.com/setups_x64/sysgauge_setup_v$version_x64.exe#/dl.7z",
                "hash": {
                    "url": "https://www.sysgauge.com/downloads.html",
                    "regex": "<b>64-Bit SHA256:</b> $sha256"
                }
            },
            "32bit": {
